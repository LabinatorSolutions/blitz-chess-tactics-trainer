<% content_for(:title) { @user.username } %>

<div class="user-profile me">
  <div class="container">
    <header class="player-info">
      <aside class="right-side">
        <div class="sign-out">
          <%= button_to 'Sign out', destroy_user_session_path, method: :delete %>
        </div>

        <div class="preferences-link">
          <a href="/preferences">Preferences</a>
        </div>
      </aside>

      <h2 class="username"><%= @user.username %></h2>
      <p class="member-since">Member since <%= @user.created_at&.strftime("%b %d, %Y") || "Unknown" %></p>

      <%= form_tag "/users/me", method: :put do %>
        <input type="text" value="<%= @user.tagline %>"
               name="user[tagline]"
               placeholder="Write something about yourself"/>
        <input type="submit" value="Save" class="blue-button"/>
      <% end %>
    </header>

    <%= render partial: "users/puzzle_stats" %>
  </div>
</div>

<%= render 'shared/main_footer' %>
